@using MovieShop.Web.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Movie Shop</title>

    <!-- Bootstrap CSS (CDN) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <a class="navbar-brand" href="/">Movie Shop</a>

    <!-- Single genre dropdown call -->
    <div class="dropdown ms-3">
        @if (ViewBag.Genres != null)
        {
            @await Html.PartialAsync("_GenreDropdown", (IEnumerable<Genre>)ViewBag.Genres)
        }
    </div>

    <div class="ms-auto">
        <a class="btn btn-outline-light" href="#">Login</a>
        <a class="btn btn-outline-light ms-2" href="#">Register</a>
    </div>
</nav>

<div class="container mt-4">
    @RenderBody()
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
